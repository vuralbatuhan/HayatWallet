<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="15dp"
    android:background="@drawable/special_home_wallet_bg">

    <ImageView
        android:id="@+id/imageSpecialHomeWallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/be_customer_button_bg" />

    <TextView
        android:id="@+id/textSpecialHomeMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textSpecialHometime"
        app:layout_constraintStart_toEndOf="@+id/imageSpecialHomeWallet"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSpecialHometime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageSpecialHomeWallet"
        app:layout_constraintTop_toBottomOf="@+id/textSpecialHomeMarka" />

    <TextView
        android:id="@+id/textSpecialHomeMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>